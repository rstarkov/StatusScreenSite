{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "taskName": "CSS",
            "type": "shell",
            "command": "node_modules/.bin/lessc Css/app.less ../Builds/Static/app.css",
            "windows": {
                "command": "node_modules/.bin/lessc Css/app.less ../Builds/Static/app.css"
            },
            "group": {
                "kind": "build"
            }
        }
    ]
}